<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp">

    <!-- Titolo -->
    <TextView
        android:id="@+id/tvChangePasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_password"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Old password -->
    <EditText
        android:id="@+id/etOldPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/old_password"
        android:inputType="textPassword"
        android:background="@drawable/input_field_bg"
        android:drawableEnd="@drawable/ic_eye_off"
        android:drawablePadding="12dp"
        android:padding="14dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#AAFFFFFF"
        android:minHeight="52dp"
        app:layout_constraintTop_toBottomOf="@id/tvChangePasswordTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- New password -->
    <EditText
        android:id="@+id/etNewPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/new_password"
        android:inputType="textPassword"
        android:background="@drawable/input_field_bg"
        android:drawableEnd="@drawable/ic_eye_off"
        android:drawablePadding="12dp"
        android:padding="14dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#AAFFFFFF"
        android:minHeight="52dp"
        app:layout_constraintTop_toBottomOf="@id/etOldPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Confirm -->
    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_password"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_solid_dark"
        app:backgroundTint="@null"
        android:paddingHorizontal="40dp"
        android:paddingVertical="14dp"
        app:layout_constraintTop_toBottomOf="@id/etNewPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>