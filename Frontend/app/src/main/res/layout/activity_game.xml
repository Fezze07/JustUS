<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp">
    <!-- Titolo -->
    <TextView
        android:id="@+id/game_stats_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:text="@string/game_stats_title"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:shadowColor="#66000000"
        android:shadowDy="4"
        android:shadowRadius="8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Statistiche del gioco" />

    <!-- Reminder button -->
    <ImageButton
        android:id="@+id/btnRemindPartner"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/remind_partner"
        android:src="@drawable/ic_bell"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/game_stats_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/game_stats_title"
        tools:visibility="visible" />
    <!-- Stats -->
    <TextView
        android:id="@+id/tvStats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="@string/game_stats"
        android:textColor="#E0E0E0"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game_stats_title" />

    <!-- Domanda -->
    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/game_question"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        android:shadowColor="#80000000"
        android:shadowDy="3"
        android:shadowRadius="6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvStats"
        tools:text="Cosa fai adesso?" />

    <!-- Card scelte -->
    <LinearLayout
        android:id="@+id/choiceContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="28dp"
        android:background="@drawable/mood_card_background"
        android:elevation="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOptionA"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_gradient"
            android:text="@string/game_option_a"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:elevation="6dp"
            app:backgroundTint="@null" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOptionB"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/btn_gradient"
            android:text="@string/game_option_b"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:elevation="6dp"
            app:backgroundTint="@null" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>