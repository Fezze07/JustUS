<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient"
        android:padding="24dp">

        <ImageView
            android:id="@+id/btnSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@string/settings"
            android:focusable="true"
            android:padding="6dp"
            android:src="@drawable/ic_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Welcome grande -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:shadowColor="#FF00FF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="8"
            android:text="@string/welcome_app"
            android:textColor="#FFEEFF"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Card per il Mood del Partner -->
        <LinearLayout
            android:id="@+id/partnerMoodContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/mood_card_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcomeText">

            <TextView
                android:id="@+id/tvPartnerLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:textColor="#FFFEFF"
                android:textSize="18sp"
                tools:text="Il mood del tuo partner Ã¨:" />

            <TextView
                android:id="@+id/tvPartnerMood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="48sp"
                android:textStyle="bold"
                tools:text="ðŸ˜Š" />
        </LinearLayout>

        <!-- Blocco centrale con pulsante e contatore -->
        <LinearLayout
            android:id="@+id/missYouContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/partnerMoodContainer"
            app:layout_constraintBottom_toTopOf="@+id/moodBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Pulsante Mi manchi -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/missYouBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_gradient"
                android:padding="14dp"
                android:text="@string/btn_miss_you"
                android:textColor="#F3E5F5"
                android:textSize="18sp"
                app:backgroundTint="@null" />

            <!-- Totale Mi manchi -->
            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="@string/total_miss_you"
                android:textColor="#F3E5F5"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Pulsante MoodActivity -->
        <Button
            android:id="@+id/moodBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_gradient"
            android:text="@string/btn_mood"
            android:textColor="#F3E5F5"
            app:backgroundTint="@null"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toTopOf="@+id/driveBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Pulsante DriveActivity -->
        <Button
            android:id="@+id/driveBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_gradient"
            android:text="@string/btn_drive"
            android:textColor="#F3E5F5"
            app:backgroundTint="@null"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toTopOf="@+id/gameBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Pulsante GameActivity -->
        <Button
            android:id="@+id/gameBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_gradient"
            android:text="@string/btn_game"
            android:textColor="#F3E5F5"
            app:backgroundTint="@null"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toTopOf="@+id/bucketBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Pulsante Bucket List -->
        <Button
            android:id="@+id/bucketBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_gradient"
            android:text="@string/btn_bucket_list"
            android:textColor="#F3E5F5"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Caricamento -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#80000000">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">
            <ProgressBar
                android:id="@+id/loadingSpinner"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:indeterminate="true"/>
            <TextView
                android:id="@+id/loadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </FrameLayout>


</FrameLayout>