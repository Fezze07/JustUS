<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_gradient"
    tools:context=".ui.partner.PartnerActivity">

    <!-- Titolo -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_search_partner"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Codice utente -->
    <TextView
        android:id="@+id/tvMyCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/my_code_text"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:gravity="center"/>

    <!-- Username + Codice -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <!-- Username -->
        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Username partner"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:drawableStart="@drawable/ic_search"
            android:padding="12dp"
            android:minHeight="48dp"
            android:background="@drawable/edittext_bg"
            tools:ignore="VisualLintTextFieldSize"/>

        <!-- Codice (6 cifre) -->
        <EditText
            android:id="@+id/codeEditText"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:hint="Codice"
            android:inputType="number"
            android:maxLength="6"
            android:gravity="center"
            android:padding="12dp"
            android:minHeight="48dp"
            android:background="@drawable/edittext_bg"
            tools:ignore="VisualLintTextFieldSize"/>
    </LinearLayout>

    <!-- Bottone invio -->
    <Button
        android:id="@+id/btnSendRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_gradient"
        android:text="Invia richiesta"
        android:textColor="@android:color/white"
        app:backgroundTint="@null" />

    <!-- Suggerimenti -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSuggestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <!-- Titolo -->
    <TextView
        android:id="@+id/tvReceivedRequestsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Richieste ricevute"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <!-- Lista richieste -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerReceived"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:scrollbars="vertical"/>
</LinearLayout>