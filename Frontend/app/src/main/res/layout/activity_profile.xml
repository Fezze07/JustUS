<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_gradient"
    android:padding="24dp">

    <!-- Titolo -->
    <TextView
        android:id="@+id/tvProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="#FFEEFF"
        android:shadowColor="#FF00FF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Card Profilo + Partner -->
    <LinearLayout
        android:id="@+id/profileCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="24dp"
        android:background="@drawable/mood_card_background"
        app:layout_constraintTop_toBottomOf="@id/tvProfileTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:weightSum="2">
        <!-- Mio Profilo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_profile_default"
                android:contentDescription="@string/user_profile_photo"
                android:background="@drawable/profile_image_bg"
                android:padding="4dp"/>
            <TextView
                android:id="@+id/tvProfileUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp"
                tools:text="Fede"/>
            <TextView
                android:id="@+id/tvBio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F3E5F5"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                tools:text="ciao ✨"/>
        </LinearLayout>
        <!-- Profilo Partner -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="16dp">
            <ImageView
                android:id="@+id/imgPartner"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_profile_default"
                android:contentDescription="@string/partner_profile_photo"
                android:background="@drawable/profile_image_bg"
                android:padding="4dp"/>
            <TextView
                android:id="@+id/tvPartnerUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp"
                tools:text="Partner"/>
            <TextView
                android:id="@+id/tvPartnerBio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F3E5F5"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                tools:text="bio partner ✨"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profileButtonsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/profileCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">
        <Button
            android:id="@+id/btnEditBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile_bio"
            android:textColor="#F3E5F5"
            android:background="@drawable/btn_gradient"
            app:backgroundTint="@null"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp"/>
        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_password"
            android:textColor="#F3E5F5"
            android:background="@drawable/btn_gradient"
            app:backgroundTint="@null"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp"
            android:layout_marginTop="12dp"/>
        <Button
            android:id="@+id/btnChangeProfilePic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_profile_pic"
            android:textColor="#F3E5F5"
            android:background="@drawable/btn_gradient"
            app:backgroundTint="@null"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
